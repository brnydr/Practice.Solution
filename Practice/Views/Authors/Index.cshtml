@{
  Layout = "_Layout";
}

@using Practice.Models

<h1>Authors</h1>

@if (@Model.Count ==  0)
{
  <h3>No authors have been added.</h3>
}

<ul>
  @foreach(Author author in Model)
  {
    <li>@Html.ActionLink($"{author.Name}", "Details", new { id = author.AuthorId })</li>
  }
</ul>

<p>@Html.ActionLink("Add a new author", "Create")</p>
<p>@Html.ActionLink("Back to Home", "Index", "Home")</p>