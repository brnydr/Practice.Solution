@{
  Layout = "_Layout";
}

@using Practice.Models

<h1>Books</h1>

@if (@Model.Count ==  0)
{
  <h3>No books have been added.</h3>
}

<ul>
  @foreach(Book book in Model)
  {
    <li>@Html.ActionLink($"{book.Title}", "Details", new { id = book.BookId })</li>
  }
</ul>

<p>@Html.ActionLink("Add a new book", "Create")</p>
<p>@Html.ActionLink("Back to Home", "Index", "Home")</p>